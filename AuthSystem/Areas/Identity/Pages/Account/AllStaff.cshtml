@page
@model AuthSystem.Areas.Identity.Pages.Account.AllStaffModel;

@{
    ViewData["Title"] = "All Staff Members";
}

<h2>All Staff Members</h2>

@if (Model.StaffUsers != null && Model.StaffUsers.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Email</th>
                <th>Role</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model.StaffUsers)
            {
                <tr>
                    <td>@user.FirstName</td>
                    <td>@user.LastName</td>
                    <td>@user.Email</td>
                    <td>@(string.Join(", ", Model.UserRoles[user]))</td>
                    <td>
                        <form method="post" asp-page-handler="Delete" asp-route-id="@user.Id">
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No staff members found.</p>
}
